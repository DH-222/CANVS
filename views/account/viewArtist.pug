extends ../layout
block content

    div.lazy
        if data && data.length > 0
            // - var resEnv = resourceEnv
            div.sort-row
                div.col-sm-5
                    a.btn.btn-primary(href='/account/artists/view/all/desc') Descend Data
                    a.btn.btn-primary(href='/account/artists/view/all/asc') Ascend Data
            div.all-cards
                for d, idx in data
                    - var da = d
                    - var img = d.picture
                    div.card-wrapper.col-sm-4.col-sm.artist-card(data-id=d._id)
                        div.card(id=d._id)
                            div.col-sm-5.no-padding
                                // img(src='https://canvs.cruxcode.nyc/mural_thumb_'+ img +'.jpg?requestType=image&size=thumb')
                                img(src= resEnvs+img)
                                //img(src='https://village-dev.canvs.app/resource/live/images/'+img)
                            div.card-body.col-sm-7
                                div.card-call
                                    span.key Name:
                                    span.val #{d.name}
                                div.card-call
                                    span.key.aug about:
                                    span.val #{d.about}
        else
            p You do not have any artist under your profile

